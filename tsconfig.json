{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "outDir": "./dist",
        "rootDir": "./"
    },
    "include": [
        "tests/**/*.ts",
        "playwright.config.ts",
        "**/*.js"
    ],
    "exclude": [
        "node_modules"
    ]
}